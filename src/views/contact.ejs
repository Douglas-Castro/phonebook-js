<%- include('includes/head')  %>
<%- include('includes/nav')  %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contact</h1>
      <p class="text-center lead">Create or edit your contact</p>

      <%- include('includes/messages') %>

      <% if (contact) { %>
        <form class="my-3" action="/contact/edit/<%= contact.id %>" method="POST">
      <% } else { %>
        <form class="my-3" action="contact/register" method="POST">
      <% } %>
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>

          <div class="form-group my-4">
            <input value="<%= contact.name %>" type="text" class="form-control" placeholder="Full Name" name="name">
          </div>
          <div class="form-group my-4">
            <input value="<%= contact.email %>" type="email" class="form-control" placeholder="Email" name="email">
          </div>
          <div class="form-group my-4">
            <input value="<%= contact.phone_number %>" type="text" class="form-control" placeholder="Phone Number" name="phone_number">
          </div>
          <div class="col text-center">
            <button type="submit" class="btn btn-primary ">Save</button>
          </div>

        </form>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer')  %>